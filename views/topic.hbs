<div class="row">
  <div class="col-sm-12">

    {{#if topic.posts}}

      {{#each topic.posts as |post|}}
        {{>post post=post}}
      {{/each}}

    {{/if}}


    {{#if @root.data.user}}
      <div class="panel panel-default compose-message-box" id="newMessage">
        <div class="panel-body">

          <div class="col-sm-1">
            <img src="{{getGravatarUrl @root.data.user.email}}" alt="image" class="img-responsive img-circle gravatar pull-left">
          </div>

          <div class="col-sm-11">
            <form action="/post/new" method="post">
              <input type="hidden" name="topicId" value="{{topic.id}}">
              <textarea name="message" class="newPostMessage"></textarea>
              <br>
              <input type="submit" value="responder" class="btn btn-primary btn-lg pull-right">
            </form>
          </div>

        </div>
      </div>
    {{/if}}


  </div>
</div>

