
<div class="page-header topic">
  <img src="{{getGravatarUrl topic.user.email}}" alt="image" class="img-responsive img-circle gravatar pull-left">
  <h3>{{topic.title}}<br><small>by {{topic.user.display_name}}, {{formatDate topic.createdAt day="numeric" month="long" year="numeric"}} in {{topic.forum.title}}</small></h3>
  {{encodeMyString topic.description}}

  {{formatRelative topic.createdAt}}

</div>


<div class="row">
  <div class="col-sm-12">

    {{#if topic.posts}}

      {{#each topic.posts as |post|}}

        <div class="panel panel-default">
          <div class="panel-body">
              <div class="col-sm-2">
                <h3>{{post.user.display_name}}</h3>
                <img src="{{getGravatarUrl post.user.email}}" alt="image" class="img-responsive img-circle gravatar">
                Perfil
                {{post.user.numPosts}} posts
                since {{formatDate post.user.createdAt day="numeric" month="long" year="numeric"}}
              </div>

              <div class="col-sm-10">
                {{encodeMyString post.message}}
              </div>
          </div>
        </div>

      {{/each}}

    {{else}}

      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-sm-12">
            <h4>No messages so far!</h4>
          </div>
        </div>
      </div>

    {{/if}}



    <div class="panel panel-default compose-message-box">
      <div class="panel-body">
        <div class="col-sm-1">
          <img src="{{getGravatarUrl @root.data.user.email}}" alt="image" class="img-responsive img-circle gravatar pull-left">
        </div>

        <div class="col-sm-11">
          <form action="/post/new" method="post">
            <input type="hidden" name="topicId" value="{{topic.id}}">
            <textarea name="message"></textarea>
            <br>
            <input type="submit" value="responder" class="btn btn-primary btn-lg pull-right">
          </form>
        </div>
      </div>
    </div>



  </div>
</div>

