<div class="row topic vertical-align{{#ifCond topic.featured true}} featured{{/ifCond}}">
  <div class="col-xs-9 col-sm-6">

    {{#ifCond topic.featured true}}
      <div class="featured-ribbon"><img src="/images/featuredRibbon.png"></div>
    {{/ifCond}}
    
    <h4><a href="/topic/{{topic.id}}">{{topic.title}}</a><br><small>by {{user.display_name}} {{formatRelative topic.createdAt}}</small></h4>

  </div>
  <div class="hidden-xs col-sm-2">

    <p>{{topic.numPosts}} answers</p>
    <p>{{topic.topicViews}} views</p>

  </div>
  <div class="col-xs-3 col-sm-4">

    {{#with topic.LastPost}}
      <div class="media">
        <div class="media-left">
          <a href="#">
            <img src="{{getGravatarUrl user.email}}" alt="image" class="media-object img-circle gravatar">
          </a>
        </div>
        <div class="media-body hidden-xs">

            <h4 class="media-heading"><a href="/topic/{{topicId}}#message-{{id}}">{{truncateString message 20}}</a> <br><small>by {{user.display_name}}</small> </h4>
            <small>{{formatRelative createdAt}}</small>

        </div>
      </div>
    {{/with}}

  </div>
</div>
