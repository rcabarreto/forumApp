<div class="row topic vertical-align">
  <div class="col-sm-6">
    <h4><a href="/topic/{{topic.id}}">{{topic.title}}</a></h4>
    {{encodeMyString topic.description}}
  </div>
  <div class="col-sm-2">

    <p>0 answers</p>
    <p>654 views</p>

  </div>
  <div class="col-sm-4">
    <img src="{{getGravatarUrl topic.user.email}}" alt="image" class="img-responsive img-circle gravatar pull-left">
    <small>by {{topic.user.display_name}}<br>{{formatRelative topic.createdAt}}</small>
  </div>
</div>
