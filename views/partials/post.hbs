

<div class="panel panel-default" id="message-{{post.id}}">
  <div class="panel-body">
    <div class="col-sm-2">
      <h3>{{post.user.display_name}}</h3>
      <img src="{{getGravatarUrl post.user.email}}" alt="image" class="img-responsive img-circle">

      <p>{{post.user.numPosts}} posts</p>
      <p>since {{formatDate post.user.createdAt day="numeric" month="long" year="numeric"}}</p>

    </div>

    <div class="col-sm-10">
      {{encodeMyString post.message}}
    </div>
  </div>
</div>


