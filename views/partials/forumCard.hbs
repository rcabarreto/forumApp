
<div class="col-sm-6 col-md-4 col-lg-3 mt-4">
  <div class="card">
    <img class="card-img-top" src="/images/forum.png">
    <div class="card-block">
      <h4 class="card-title">{{truncateString forum.title 25}}</h4>
      <div class="card-text">
        {{truncateString forum.description 200}}
      </div>
    </div>
    <div class="card-footer">
      <span>Topics <span class="badge">{{forum.numTopics}}</span></span>
      <span class="pull-right">Posts <span class="badge">{{forum.numPosts}}</span></span>
    </div>
    <div class="card-footer">
      <small class="">Last updated {{formatRelative forum.updatedAt}}</small>
    </div>
    <div class="card-footer">
      <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
          <a class="btn btn-primary" href="/forum/{{forum.id}}" role="button">View forum Â»</a>
        </div>
      </div>
    </div>
  </div>
</div>
