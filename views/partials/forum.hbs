
<div class="row forum vertical-align">
  <div class="col-sm-1">
    <img src="/images/forum.png" alt="image" class="img-responsive img-circle">
  </div>
  <div class="col-sm-5">
    <h4><a href="/forum/{{forum.id}}">{{forum.title}}</a></h4>
    {{encodeMyString forum.description}}
  </div>
  <div class="col-sm-2">
    <dl>
      <dt class="stats_number">{{forum.numTopics}}</dt>
      <dd class="stats_type">topics</dd>
    </dl>
    <dl>
      <dt class="stats_number">{{forum.numPosts}}</dt>
      <dd class="stats_type">posts</dd>
    </dl>
  </div>
  <div class="col-sm-4">

    {{#if LastPost}}
      {{#with LastPost}}

        <div class="media">
          <div class="media-left">
            <a href="#">
              <img src="{{getGravatarUrl user.email}}" alt="image" class="media-object img-circle gravatar">
            </a>
          </div>
          <div class="media-body">
            <h4 class="media-heading"><a href="/topic/{{topicId}}#message-{{id}}">{{title}}</a> <br><small>by {{user.display_name}}</small> </h4>
            <small>{{formatRelative createdAt}}</small>
          </div>
        </div>

      {{/with}}

    {{/if}}

  </div>
</div>

