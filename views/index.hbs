<div class="page-header">

  <div class="row">
    <div class="col-xs-6"><h1>Forums</h1></div>
    <div class="col-xs-6">
      {{#ifCond @root.data.user.profile 'admin'}}
        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#newForumModal" data-title="New Forum">Create new forum <span class="glyphicon glyphicon-plus"></span></button>
      {{/ifCond}}
    </div>
  </div>


</div>

{{#if forums}}
  <div class="row">

  {{#each forums as |forum|}}

      <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
        <div class="card">
          <img class="card-img-top" src="/images/forum.png">
          <div class="card-block">
            <h4 class="card-title">{{forum.title}}</h4>
            <div class="card-text">
              {{encodeMyString forum.description}}
            </div>
          </div>
          <div class="card-footer">
            <small>Last updated 3 mins ago</small>
            <span class="pull-right">Topics <span class="badge">42</span></span>
          </div>
          <div class="card-footer">
            <div class="btn-group btn-group-justified" role="group" aria-label="...">
              <div class="btn-group" role="group">
                <a class="btn btn-info" href="/forum/{{forum.id}}" role="button">View forum »</a>
              </div>
            </div>
          </div>
        </div>
      </div>

  {{/each}}

  </div>

{{else}}

  <h3>No forums created yet</h3>

{{/if}}








