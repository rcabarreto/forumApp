
<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <form role="form" data-toggle="validator" action="{{form.action}}" method="{{form.method}}">
      {{#if form.profile}}
        <input type="hidden" name="profile" value="{{form.profile}}">
      {{else}}
        <input type="hidden" name="profile" value="user">
      {{/if}}
      <h2>{{form.title}} <small>{{form.subtitle}}</small></h2>
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <input type="text" name="first_name" id="first_name" class="form-control input-lg" placeholder="First Name" tabindex="1" value="{{form.data.first_name}}" required>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <input type="text" name="last_name" id="last_name" class="form-control input-lg" placeholder="Last Name" tabindex="2" value="{{form.data.last_name}}" required>
          </div>
        </div>
      </div>
      <div class="form-group">
        <input type="text" name="display_name" id="display_name" class="form-control input-lg" placeholder="Display Name" tabindex="3" value="{{form.data.display_name}}" required>
      </div>
      <div class="form-group">
        <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email Address" tabindex="4" value="{{form.data.email}}" data-error="The email address is invalid" required>
        <div class="help-block with-errors"></div>
      </div>
      <div class="row" id="pwd-container">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <input type="password" data-minlength="8" name="password" id="password" class="form-control input-lg" placeholder="Password" tabindex="5" required>
            <div class="help-block with-errors"></div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-lg" placeholder="Confirm Password" tabindex="6" data-match="#password" data-match-error="Whoops, these don't match" required>
            <div class="help-block with-errors"></div>
          </div>
        </div>

        <div class="col-md-12">
          <div class="pwstrength_viewport_progress"></div>
        </div>

      </div>

      <hr class="colorgraph">

      <div class="row">
        <div class="col-md-12"><input type="submit" value="{{form.buttonlabel}}" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
      </div>

    </form>
  </div>
</div>
